<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingStart="@dimen/size_l"
    android:paddingEnd="@dimen/size_l">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:layout_marginLeft="10dp"
                android:orientation="vertical"
                android:background="@drawable/roundbackground">

                <ImageView
                    android:id="@+id/vegetarian"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:src="@drawable/vegetarian"/>

            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textColor="#000"
                android:text="Veg"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:padding="15dp"
            android:background="@drawable/roundbackground">

            <ImageView
                android:id="@+id/meat"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/meat"/>
        </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textColor="#000"
                android:text="Meat"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:padding="15dp"
            android:background="@drawable/roundbackground">

            <ImageView
                android:id="@+id/vegan"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/vegan"/>
        </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textColor="#000"
                android:text="Vegan"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:padding="15dp"
            android:background="@drawable/roundbackground">

            <ImageView
                android:id="@+id/drinks"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/drinks"/>
        </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textColor="#000"
                android:text="Drinks"/>

        </LinearLayout>


    </LinearLayout>



    <TextView
        android:id="@+id/searchTextLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@drawable/ic_search_background"
        android:drawablePadding="@dimen/size_l"
        android:padding="@dimen/size_l"
        android:hint="Search Food..."
        app:drawableStartCompat="@drawable/ic_search"
        android:layout_gravity="center_vertical"
        android:imeOptions="actionDone"
        android:singleLine="true"
        />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/homeRecipe"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/size_m"
        android:clipToPadding="false"
        android:paddingTop="@dimen/size_l"

         />



</LinearLayout>